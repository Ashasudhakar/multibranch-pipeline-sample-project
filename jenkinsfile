properties ([
    parameters ([
        stringParam {
            name: "host-name",
            defaultValue: "",
            description: "name of the server"
        },
        stringParam {
            name: "user-name",
            defaultValue: "",
            description: "name of the user"
        },
        stringParam {
            name: "password",
            defaultValue: "",
            description: "password of the user"
        }


    ])
])

// Declarative //
pipeline {
    agent {label 'ubuntu'}
    options {timestamps()}
    
    stages {
        stage('Example') {
            steps {
                echo "name of the server ${params.host-name}"
                echo "name of the user ${params.user-name}"
                echo "password of the user ${params.password}"
            }
        }
    }
}